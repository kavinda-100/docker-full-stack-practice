{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ES2022",
		"moduleResolution": "Bundler",
		"lib": ["ESNext"],
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"allowJs": true,
		"isolatedModules": true,
		"outDir": "./dist",
		"rootDir": "./src",
	},

    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist", "src/**/*.test.ts", "src/**/*.spec.ts"]
}